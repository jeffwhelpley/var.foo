{
    "compilerOptions": {
        "noEmit": true,
        "module": "esnext",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "strict": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "types": [
            "@cloudflare/workers-types",
            "@types/jest",
            "@types/node",
        ],
        "baseUrl": "./",
        "paths": {
            "@varfoo/adapters": [
                "src/adapters"
            ],
            "@varfoo/services": [
                "src/services"
            ],
            "@varfoo/models": [
                "src/models"
            ],
            "@varfoo/worker": [
                "src/worker"
            ],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}